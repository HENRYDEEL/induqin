        <template id="report_manufacturing_view">
            <t t-call="web.html_container">
                <t t-foreach="docs" t-as="doc">
                    <t t-set="lang" t-value="doc.user_id.sudo().lang"/>
                    <div class="article" t-att-data-oe-model="doc and doc._name" t-att-data-oe-id="o and o.id"
                         t-att-data-oe-lang="doc and doc.env.context.get('lang')">
                        <t t-call="ht_mrp_report.report_manufacturing" t-lang="lang"/>
                    </div>
                </t>
            </t>
        </template>
        <report
                id="report_mrp_production"
                model="mrp.production"
                string="Material De Empaque"
                name="ht_mrp_report.report_manufacturing_view"
                report_type="qweb-pdf"
                multi="False"
        />


        <template id="report_manufacturing_preparation">
            <div class="page" style="padding:0;   font-size: 14px">
                <div>

                    <div class="row mb8">
                        <table style="width:100%">
                            <thead>
                                <tr style="border: 1px solid black; border-left: 1px solid black; border-right: 1px solid black">
