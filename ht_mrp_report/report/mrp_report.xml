        <template id="report_manufacturing">
            <div class="page" style="padding:0;   font-size: 14px">
                <div>
                    <div class="row mb8">
                        <div class="col-12" style="border-left: 1px solid black; border-right: 1px solid black; border-top: 1px solid black; border-bottom: 1px solid black; text-align:center;">
                            <b><span>MATERIAL DE EMPAQUE</span></b>
                        </div>
                    </div>
                    <div class="row mb8">
                        <table class="table table-sm o_main_table">
                            <thead>
                                <tr style="border: 1px solid black; border-left: 1px solid black; border-right: 1px solid black">
                                    <th class="text-center " style="border-right: 1px solid black; border-top: 1px solid black">
                                        <span>CANTIDAD</span>
                                    </th>
                                    <th class="text-center " style="border-right: 1px solid black; border-top: 1px solid black">
                                        <span>DESCRIPCION</span>
                                    </th>
                                    <th class="text-center " style="border-right: 1px solid black; border-top: 1px solid black">
                                        <span>CANTIDAD DEVUELTA</span>
                                    </th>

                                </tr>
                            </thead>
                            <tbody>
                                <t t-foreach="doc.move_raw_ids" t-as="line">
                                    <tr style="border: 1px solid black; border-left: 1px solid black; border-right: 1px solid black">
                                        <td class="text-right " style="border-right: 1px solid black; border-top: 1px solid black">
                                            <span t-field="line.quantity_done"/>
                                        </td>
                                        <td class="text-left " style="border-right: 1px solid black; border-top: 1px solid black">
                                            <span t-field="line.product_id.name"/>
                                        </td>
                                        <td class="text-right " style="border-right: 1px solid black; border-top: 1px solid black">
                                            <t t-set="returned" t-value=" line.quantity_done - line.product_uom_qty"/>
                                            <t t-if="returned > 0">
                                            </t>
                                            <t t-else="">
                                                <span>0.00</span>
                                            </t>
                                        </td>
                                    </tr>
                                </t>
                            </tbody>
                        </table>
                    </div>

