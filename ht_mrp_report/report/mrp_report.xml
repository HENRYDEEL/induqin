                                    <td style="border-top: 1px solid black">
                                        <t t-raw="doc.bom_id.procedimiento_para_la_fabricacion"/>
                                    </td>
                                </tr>

                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </template>

